<link rel="stylesheet" href="/css/loginregistrar.css" />
{{> barra}}
<div class="DivCont">
  <div class="DivImg">
    <figure>
      <img src="/img/img1.jpeg" alt="Personas leyendo" />
    </figure>
  </div>
  <form class="formulario-login" action="/login" method="post">
    <h1>¡BIENVENIDO!</h1>

    {{#if message}}
      <div class="mensaje">
        {{message}}
      </div>
    {{/if}}

    <div class="GrupoInput">
      <label class="Label" for="correo">Correo</label>
      <input class="Input" type="text" id="correo" name="correo_electronico" required/>
    </div>

    <div class="GrupoInput">
      <label class="Label" for="contra">Contraseña</label>
      <input class="Input" type="password" id="contra" name="password" required/>
    </div>

    <div class="OlvidarContra">
      <button class="Boton">¿Olvidaste tu contraseña?</button>
    </div>

    <div class="GrupoBoton" style="position: relative; top:-1rem">
      <button class="Boton">INICIAR SESIÓN</button>
    </div>

    <div class="IrLogeoRegistrar">
      <p>
        ¿No tienes cuenta?
        <a class="Enlace" href="/registro">REGISTRATE</a>
      </p>
    </div>
  </form>

</div>