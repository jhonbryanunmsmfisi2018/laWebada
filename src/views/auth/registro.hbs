<div class="DivCont">
  <div class="DivImg" style="width: 45%">
    <figure style="width: 100%">
      <img src="/img/img2.jpeg" alt="imagen" />
    </figure>
  </div>

  <div class="DivForm" style="width: 55%">
    <form
      class="Formulario"
      action="/registro"
      method="post"
      style="width: 90%; height: 80%"
    >

      <h1 style="marginBottom: 15px">
        <b>¡REGISTRATE!</b>
      </h1>

      <div class="GrupoComponenteGrupo">
        <div class="GrupoInput">
          <label class="Label" class="Label" for="nombre">Nombres</label>
          <input
            class="Input"
            style="width: 100%"
            type="text"
            pattern=".{,50}"
            maxlength="50"
            id="nombre"
            name="nombre"
          />
        </div>

        <div class="GrupoInput">
          <label class="Label" for="apellido">Apellido Paterno</label>
          <input
            class="Input"
            style="width: 100%"
            type="text"
            pattern=".{,50}"
            maxlength="50"
            id="apellido"
            name="apellidoPaterno"
          />
        </div>
      </div>

      <div class="GrupoComponenteGrupo">

        <div class="GrupoInput">
          <label class="Label" for="dni">DNI</label>
          <input
            class="Input"
            type="text" 
            pattern="\d*" 
            maxlength="8"
            style="width: 100%"
            id="dni"
            name="dni"
          />
        </div>

        <div class="GrupoInput">
          <label class="Label" for="correo">Correo</label>
          <input
            class="Input"
            style="width: 100%"
            type="email"
            pattern=".{,50}"
            maxlength="50"
            id="correo"
            name="correo_electronico"
          />
        </div>
      </div>

      <div class="GrupoComponenteGrupo">
        <div class="GrupoInput">
          <label class="Label" for="contra">Contraseña</label>
          <input
            class="Input"
            style="width: 100%"
            type="password"
            id="contra"
            name="password"
          />
        </div>

        <div class="GrupoInput">
          <label class="Label" for="contra2">Confirmar Contraseña</label>
          <input
            class="Input"
            style="width: 100%"
            type="password"
            id="contra2"
            name="contra2"
          />
        </div>
      </div>

      <div class="GrupoBoton" style="width: 100%">
        <button class="Boton" style="width: 55%">Registrarse</button>
      </div>

      <div class="IrLogeoRegistrar">
        <p>
          ¿Ya tienes cuenta?
          <a class="Enlace" href="/login">INICIAR SESIÓN</a>
        </p>
      </div>

    </form>
  </div>
</div>