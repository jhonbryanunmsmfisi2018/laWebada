<link rel="stylesheet" href="/css/denunciar.css" />
{{> navigation}}
<main class="index" style="width:100%">
  <h1 class="mb-1" style="margin: 25;">
    DENUNCIAR
  </h1>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="box-shadow-full" style="padding-top: 3rem;">
          <div class="row">
            <h2 style="margin-bottom: 25px;">
              Usuario a denunciar
            </h2>
            <div
              class="wrap-mensaje"
              data-validate="Name is required"
            >
              <input
                class="mensaje"
                type="text"
                name="usuario"
                placeholder="Usuario..."
              />
              <span class="focus-mensaje"></span>
            </div>

            <h2 style="margin-bottom: 25px;margin-top: 25px;">Raz√≥n de la
              denuncia</h2>
            <div
              class="contenedor-mensaje"
              data-validate="Message is required"
            >
              <textarea
                class="mensaje"
                name="razon"
                placeholder="Denuncia..."
              ></textarea>
              <span class="focus-mensaje"></span>
            </div>

            <h2 style="margin-bottom: 15px;">Evidencia de denuncia</h2>
            <input class="form-control" type="file" id="formFile" />

            <div class="text-center" style="margin-top: 25px;">
              <button
                type="button"
                class="btn btn-primary"
                style="font-size: 17px;font-weight: 900;"
              >PUBLICAR DENUNCIA</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>