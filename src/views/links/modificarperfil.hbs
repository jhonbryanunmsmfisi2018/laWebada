<link rel="stylesheet" href="/css/perfil-modificar.css" />

{{> barra}}
  <form action="/links/edituser/{{user.dni}}" method="POST">
<div class="DivCont">
  <div class="ContDatosIzq">
    <div class="DivImg">
      <figure>
        <img class="Img" src="/img/messi.jpg" alt="Foto Perfil" />
      </figure>
      <button>Editar Foto</button>
    </div>

    <div class="GrupoContacto">
      <h2>Contactos</h2>

      <div class="Contactos">
        <figure>
          <img class="Img" src="/img/wsp.png" alt="WhatsApp" />
        </figure>
        <input class="Enlaces" type="url" placeholder="link de WhatsApp" />
      </div>

      <div class="Contactos">
        <figure>
          <img class="Img" src="/img/twitter.jpg" alt="Twitter" />
        </figure>
        <input class="Enlaces" type="url" placeholder="link de Twitter" />
      </div>

      <div class="Contactos">
        <figure>
          <img class="Img" src="/img/instagram.png" alt="Instagram" />
        </figure>
        <input class="Enlaces" type="url" placeholder="link de Instagram" />
      </div>

      <div class="Contactos">
        <figure>
          <img class="Img" src="/img/fb.png" alt="Facebook" />
        </figure>
        <input class="Enlaces" type="url" placeholder="link de Facebook" />
      </div>

      <div class="Contactos">
        <figure>
          <img class="Img" src="/img/watt.png" alt="Wattpad" />
        </figure>
        <input class="Enlaces" type="url" placeholder="link de Wattpad" />
      </div>
    </div>

  </div>

  <div class="ContDatosDer">

    <h1>{{user.nombre}} {{user.apellidoPaterno}} {{user.apellidoMaterno}}</h1>

    <div class="GrupoDatosModificar">
      <div class="GrupoInfoPersonal">
        <h2>Información Personal</h2>

        <div class="GrupoInput">
          <label for="nombres">Nombres</label>
          <input class="Input" type="text" id="nombre" disabled value="{{user.nombre}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="apellidoP">Apellido Paterno</label>
          <input class="Input" type="text" id="apellidoPaterno" disabled value="{{user.apellidoPaterno}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="apellidoM">Apellido Materno</label>
          <input class="Input" type="text" id="apellidoMaterno" value="{{user.apellidoMaterno}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="celular">Número Celular</label>
          <input class="Input" type="tel" id="celular" value="{{user.telefono}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="genero">Género</label>
          <label><input type="radio" name="genero" value="M" {{{checked user.genero 'M'}}}>Masculino</label><br>
          <label><input type="radio" name="genero" value="F" {{{checked user.genero 'F'}}}>Femenino</label><br>
          <label><input type="radio" name="genero" value="O" {{{checked user.genero 'O'}}}>Otro</label><br>
        </div>

        <div class="GrupoInput">
          <label for="nacimiento">Fecha de Nacimiento</label>
          <input class="Input" type="date" id="fecha_nacimiento" value="{{user.fecha}}" placeholder="" />
        </div>
      </div>

      <div class="GrupoInfoCuenta">
        <h2>Información de la cuenta</h2>

        <div class="GrupoInput">
          <label for="usuario">Usuario</label>
          <input class="Input" type="text" id="usuario" disabled value="{{user.nombre}} {{user.apellidoPaterno}} {{user.apellidoMaterno}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="correo">Correo</label>
          <input class="Input" type="email" id="correo" disabled value="{{user.correo_electronico}}" placeholder="" />
        </div>

        <div class="GrupoInput">
          <label for="contra">Contraseña</label>
          <input class="Input" type="password" id="contra" disabled value="{{user.password}}" placeholder="" />
        </div>

        <h2>Dirección</h2>

        <div class="GrupoInput">
          <label for="distrito">Distrito</label>
          <select class="Input">
            
          </select>
        </div>

        <div class="GrupoInput">
          <label for="direc">Dirección</label>
          <input class="Input" type="text" id="direc" value="{{user.direccion}}" placeholder="" />
        </div>

      </div>
    </div>
    <div class="GrupoBoton">
      <button class="BotonConfirmar">Confirmar Edición</button>
    </div>
  </div>
</div>
  </form>