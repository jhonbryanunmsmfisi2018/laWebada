<link rel="stylesheet" href="/css/publicar.css" />

{{> barra}}
<main class="index" style="width:100%">
  <div class="container" style="margin-top: 50px;">
    <div class="row">
      <div class="col-sm-12">
        <div class="box-shadow-full" style="padding-top: 3rem;">
          <div class="row" style="margin-bottom: 25px;">
            <div class="col-6 col-md-4">
              <h2 style="margin-bottom: 25px;">
                Titulo del libro
              </h2>
            </div>
            <div class="col-12 col-md-8">
              <div
                class="wrap-mensaje validate-input alert-validate"
                data-validate="Name is required"
              >
                <input
                  class="mensaje"
                  type="text"
                  name="name"
                  placeholder="Titulo..."
                />
                <span class="focus-mensaje"></span>
              </div>
            </div>
          </div>
          <input class="form-control" type="file" id="formFile" />
          <h1 style="margin-top: 25px;">
            Información del libro
          </h1>
          <div class="row">
            <div class="col-md-6">
              <h2>Autor(a)</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="text"
                  name="autor"
                  placeholder="Autor..."
                />
              </div>
              <h2>Número Páginas</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="text"
                  name="pags"
                  placeholder="Num pag..."
                />
              </div>
              <h2>Tamaño</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="text"
                  name="tamaño"
                  placeholder="Tamaño..."
                />
              </div>
            </div>
            <div class="col-md-6">
              <h2>Editorial</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="text"
                  name="editorial"
                  placeholder="Editorial..."
                />
              </div>
              <h2>Fecha Lanzamiento</h2>

              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="date"
                  name="lanzamiento"
                  placeholder="Fecha..."
                />
              </div>
              <h2>Idioma</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="text"
                  name="idioma"
                  placeholder="Idioma..."
                />
              </div>
            </div>
          </div>
          <h2 style="text-align: left;">Descripción</h2>
          <div
            class="contenedor-mensaje validate-input"
            data-validate="Message is required"
          >
            <textarea
              class="mensaje"
              name="descripcion"
              placeholder="Descripción..."
            ></textarea>
            <span class="focus-mensaje"></span>
          </div>
          <h2 style="text-align: left;">Categoria</h2>
          <div class="row">
            <div class="col-md-6">
              <select class="form-control custom-select">
                <option selected="">Género</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
            <div class="col-md-6">
              <select class="form-control custom-select">
                <option selected="">Especie</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <h2 style="text-align: left;">Precio</h2>
              <div class="wrap-mensaje">
                <input
                  class="mensaje"
                  type="number"
                  name="precio"
                  placeholder="Precio..."
                />
              </div>
            </div>
            <div class="col-md-6">
              <h2>Promocionar</h2>
              <div class="container">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="flexRadioDefault"
                    id="flexRadioDefault1"
                  />
                  <label class="form-check-label" for="flexRadioDefault1">
                    Sí, acepto
                    <a
                      href="#"
                      data-toggle="modal"
                      data-target="#ModalTerminos"
                    >TÉRMINOS Y CONDICIONES</a>

                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="flexRadioDefault"
                    id="flexRadioDefault2"
                    checked
                  />
                  <label class="form-check-label" for="flexRadioDefault2">
                    No
                  </label>
                </div>
              </div>
            </div>
          </div>
          <div class="text-center" style="margin-top: 25px;">
            <button
              type="button"
              class="btn btn-primary"
              style="font-size: 17px;font-weight: 900;"
            >PUBLICAR LIBRO</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>